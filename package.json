{
  "name": "notes-privacy-first",
  "version": "0.1.0",
  "description": "Privacy-first note-taking app for journalists with E2EE",
  "author": "Relatronica",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "clean": "rm -rf build dist .svelte-kit",
    "clean:dist": "rm -rf dist",
    "electron:dev": "./node_modules/.bin/electron .",
    "dev:electron": "concurrently --names \"vite,electron\" --prefix-colors \"cyan,yellow\" --kill-others-on-fail \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron:dev\"",
    "electron:build": "npm run clean:dist && vite build && node scripts/fix-electron-paths.js && ./node_modules/.bin/electron-builder",
    "electron:build:mac": "npm run clean:dist && vite build && node scripts/fix-electron-paths.js && electron-builder --mac",
    "electron:build:win": "npm run clean:dist && vite build && node scripts/fix-electron-paths.js && electron-builder --win",
    "electron:build:linux": "npm run clean:dist && vite build && node scripts/fix-electron-paths.js && electron-builder --linux"
  },
  "dependencies": {
    "@codemirror/commands": "^6.3.0",
    "@codemirror/lang-markdown": "^6.2.4",
    "@codemirror/search": "^6.5.4",
    "@codemirror/state": "^6.2.1",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.24.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tiptap/core": "^3.14.0",
    "@tiptap/extension-color": "^3.14.0",
    "@tiptap/extension-image": "^3.14.0",
    "@tiptap/extension-link": "^3.14.0",
    "@tiptap/extension-table": "^3.14.0",
    "@tiptap/extension-table-cell": "^3.14.0",
    "@tiptap/extension-table-header": "^3.14.0",
    "@tiptap/extension-table-row": "^3.14.0",
    "@tiptap/extension-text-align": "^3.14.0",
    "@tiptap/extension-text-style": "^3.14.0",
    "@tiptap/html": "^3.14.0",
    "@tiptap/pm": "^3.14.0",
    "@tiptap/starter-kit": "^3.14.0",
    "codemirror": "^6.0.1",
    "dompurify": "^3.3.1",
    "lucide-svelte": "^0.562.0",
    "marked": "^11.1.1",
    "turndown": "^7.2.2",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.0",
    "@types/dompurify": "^3.0.5",
    "@types/uuid": "^9.0.7",
    "concurrently": "^9.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "wait-on": "^9.0.3"
  }
}
